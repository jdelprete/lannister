<tr class="variant">
  <td>
    <input type="checkbox" class="variant-checkbox" data-variant-id="<%= product_variant.id %>" checked>
  </td>
  <td>
    <img src="<%= product_variant.image.url %>" class="border-img" style="max-width: 100px; max-height: 100px; margin: 5px;">
  </td>

  <% product_variant.sorted_variant_options.each do |option| %>
    <td>
      <%= option.title %>
    </td>
  <% end %>

  <td>
    <%= number_to_currency(product_variant.cost) %>
  </td>
  <td>
    <%= product_variant.inventory %>
  </td>
</tr>
